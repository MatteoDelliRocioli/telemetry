{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Trace"
      //"Microsoft": "Warning",
      //"Microsoft.Hosting.Lifetime": "Information"
    },
    "Debug": {
      "IncludeScopes": false,
      "LogLevel": {
        "Default": "Trace"
      }
    },
